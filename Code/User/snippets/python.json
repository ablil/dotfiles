    "CLI with argparse": {
        "prefix": "cli",
        "description": "CLI boilerplate",
        "body": [
            "import argparse",
            "from $1 import version",
            "",
            "class CLI:",
            "",
            "    def __init__(self):",
            "        self.cli = argparse.ArgumentParser(",
            "            description='$2',",
            "            epilog=f'For more info: https://github.com/ablil/${3:reponame}',",
            "        )",
            "",
            "        self.__setup()",
            "",
            "",
            "    def __setup(self):",
            "        # global",
            "        self.cli.add_argument('--version', action='version', version='%(prog)s {}'.format(${4:version.VERSION}))",
            "        self.cli.add_argument('-v', '--verbose', help='verbose mode', action='store_true')",
            "",
            "        # custom",
            "        $5",
            "",
            "    def parse(self):",
            "        args = self.cli.parse_args()",
            "",
            "        # validate args",
            "        return args",
        ]
    },
    "setup.py file": {
        "prefix": "setup.py",
        "description": "setup.py boilerplate",
        "body": [
            "import setuptools",
            "import pathlib",
            "",
            "cwd = pathlib.Path(__file__).parent",
            "requirements = (cwd / 'requirements.txt').read_text().split(\"\\n\")",
            "",
            "short_description = '$1'",
            "long_description = ''",
            "with open('README.md', 'r') as fd:",
            "    long_description = fd.read()",
            "",
            "setuptools.setup(",
            "    name='$2',",
            "    packages=setuptools.find_packages(),",
            "    version='${3:0.0.1}',",
            "    entry_points={'console_scripts': ['$2 = src.__main__:main']},",
            "    description=short_description,",
            "    long_description=long_description,",
            "    long_description_content_type='text/markdown',",
            "    author='${4:ablil}',",
            "    author_email='${5:ablil@protonmail.com}',",
            "    license='${6:MIT}',",
            "    url='https://github.com/$4/$2',",
            "    install_requires=requirements,",
            "    python_requires='>3.7',",
            ")",
        ]
    }
}